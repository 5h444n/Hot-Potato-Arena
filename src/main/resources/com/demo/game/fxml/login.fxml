<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?> <VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
                                          fx:controller="com.demo.game.controllers.LoginController"
                                          alignment="CENTER" spacing="20" prefHeight="600" prefWidth="800"
                                          stylesheets="@../css/style.css">

    <padding>
        <Insets top="50" right="150" bottom="50" left="150"/>
    </padding>

    <Label text="Hot Potato Arena" styleClass="label-title" />
    <Label fx:id="statusLabel" styleClass="label-error" visible="false" />

    <VBox alignment="CENTER_LEFT" spacing="10" maxWidth="350">
        <Label text="Username:" styleClass="label-regular" />
        <TextField fx:id="usernameField" promptText="Enter username" />
    </VBox>

    <VBox alignment="CENTER_LEFT" spacing="10" maxWidth="350">
        <Label text="Password:" styleClass="label-regular" />
        <PasswordField fx:id="passwordField" promptText="Enter password" />
    </VBox>

    <Button text="Login" onAction="#handleLogin" />

    <HBox alignment="CENTER" spacing="10">
        <Label text="Don't have an account?" styleClass="label-regular" />
        <Hyperlink text="Register Now" onAction="#handleShowRegister" />
    </HBox>

    <Button text="Quit Game" onAction="#handleQuit" styleClass="button-back" />
</VBox>