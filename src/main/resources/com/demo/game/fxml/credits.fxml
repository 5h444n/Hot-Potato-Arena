<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.demo.game.controllers.CreditsController"
      alignment="CENTER" spacing="10" prefHeight="600" prefWidth="800"
      stylesheets="@../css/style.css">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Credits" styleClass="label-title" />

    <ScrollPane fx:id="scrollPane" fitToWidth="true" VBox.vgrow="ALWAYS"
                style="-fx-background: #1a1a1a; -fx-background-color: #1a1a1a;">
        <VBox fx:id="creditsContent" alignment="TOP_CENTER" spacing="15">
            <padding>
                <Insets top="20" right="50" bottom="20" left="50"/>
            </padding>
            <Label text="Game Director" styleClass="label-header" />
            <Label text="Your Name" styleClass="label-regular" />

            <Label text="Lead Programmer" styleClass="label-header" />
            <Label text="Your Name" styleClass="label-regular" />

            <Label text="Art &amp; Design" styleClass="label-header" />
            <Label text="Asset Pack Name / Artist" styleClass="label-regular" />

            <Label text="Sound &amp; Music" styleClass="label-header" />
            <Label text="Asset Pack Name / Artist" styleClass="label-regular" />

            <Label text="Special Thanks" styleClass="label-header" />
            <Label text="FXGL Framework by AlmasB" styleClass="label-regular" />
            <Label text="Gemini AI (for assistance)" styleClass="label-regular" />

            <Label text="Powered By" styleClass="label-header" />
            <Label text="JavaFX, FXGL" styleClass="label-regular" />

            <VBox alignment="CENTER" spacing="5" style="-fx-padding: 20 0 0 0;">
                <Hyperlink fx:id="githubLink" text="GitHub Repository" onAction="#handleGitHub" />
                <Hyperlink fx:id="websiteLink" text="Your Website" onAction="#handleWebsite" />
                <Label fx:id="versionLabel" text="Version 1.0.0" styleClass="label-regular" />
            </VBox>
        </VBox>
    </ScrollPane>

    <HBox alignment="CENTER" spacing="10">
        <Button fx:id="autoScrollButton" text="Auto-Scroll" onAction="#handleAutoScroll" />
        <Button fx:id="backButton" text="Back to Main Menu" onAction="#handleBack" styleClass="button-back" />
    </HBox>
</VBox>