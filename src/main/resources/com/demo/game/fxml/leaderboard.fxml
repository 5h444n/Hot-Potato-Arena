<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.demo.game.controllers.LeaderboardController"
      alignment="CENTER" spacing="20" prefHeight="600" prefWidth="800"
      stylesheets="@../css/style.css">

    <padding>
        <Insets top="50" right="100" bottom="50" left="100"/>
    </padding>

    <Label text="Leaderboard" styleClass="label-title" />

    <TableView fx:id="leaderboardTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="rankColumn" text="Rank" minWidth="100" />
            <TableColumn fx:id="usernameColumn" text="Username" minWidth="300" />
            <TableColumn fx:id="scoreColumn" text="Score" minWidth="200" />
        </columns>
    </TableView>

    <Button text="Back" onAction="#handleBack" styleClass="button-back" />
</VBox>