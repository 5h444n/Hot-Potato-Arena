<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.demo.game.controllers.RegisterController"
      alignment="CENTER" spacing="15" prefHeight="600" prefWidth="800"
      stylesheets="@../css/style.css">

    <padding>
        <Insets top="50" right="150" bottom="50" left="150"/>
    </padding>

    <Label text="Create Account" styleClass="label-title" />
    <Label fx:id="errorLabel" styleClass="label-error" managed="false" />
    <Label fx:id="successLabel" styleClass="label-success" managed="false" />

    <VBox spacing="10" maxWidth="350">
        <Label text="Username:" styleClass="label-regular" />
        <TextField fx:id="usernameField" promptText="Choose a username" />

        <Label text="Email:" styleClass="label-regular" />
        <TextField fx:id="emailField" promptText="Enter your email" />

        <Label text="Password:" styleClass="label-regular" />
        <PasswordField fx:id="passwordField" promptText="Create a password" />

        <Label text="Confirm Password:" styleClass="label-regular" />
        <PasswordField fx:id="confirmPasswordField" promptText="Confirm password" />

        <HBox alignment="CENTER_LEFT" spacing="5">
            <Label fx:id="passwordStrengthLabel" text="" styleClass="label-regular"/>
            <ProgressBar fx:id="passwordStrengthBar" progress="0.0" HBox.hgrow="ALWAYS" />
        </HBox>

        <CheckBox fx:id="termsCheckBox" text="I agree to the terms and conditions" />
    </VBox>


    <Button fx:id="registerButton" text="Register" onAction="#handleRegister" />
    <Button fx:id="backButton" text="Back to Login" onAction="#handleBack" styleClass="button-back" />
</VBox>