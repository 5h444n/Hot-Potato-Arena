<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="800.0" spacing="25" styleClass="root-container" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/24.0.1" fx:controller="com.demo.game.controllers.MainMenuController">

    <padding>
        <Insets bottom="50" left="50" right="50" top="50" />
    </padding>

    <Label styleClass="game-title" text="Hot Potato Arena">
        <font>
            <Font size="48.0" />
        </font>
    </Label>

    <Label fx:id="welcomeLabel" styleClass="welcome-label">
        <font>
            <Font size="18.0" />
        </font>
    </Label>

    <Label fx:id="highScoreLabel" styleClass="score-label">
        <font>
            <Font size="16.0" />
        </font>
    </Label>

    <VBox alignment="CENTER" maxWidth="300" spacing="15">
        <Button fx:id="singlePlayerButton" onAction="#handleSinglePlayer" prefWidth="250" styleClass="menu-button" text="Single Player" />

        <Button fx:id="multiplayerButton" onAction="#handleMultiplayer" prefWidth="250" styleClass="menu-button" text="Multiplayer" />

        <Button fx:id="settingsButton" onAction="#handleSettings" prefWidth="250" styleClass="menu-button" text="Settings" />

        <Button fx:id="creditsButton" onAction="#handleCredits" prefWidth="250" styleClass="menu-button" text="Credits" />

        <Button fx:id="quitButton" onAction="#handleQuit" prefWidth="250" styleClass="quit-button" text="Quit" />
    </VBox>
</VBox>
